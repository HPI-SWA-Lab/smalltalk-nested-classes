doesNotUnderstand: aMessage	| object selector args |	" go through lexical scope and look for selector (class) "	object := target.	selector := aMessage selector.	args := aMessage arguments.	[ object notNil ] whileTrue: [		(object respondsTo: selector) ifTrue: [ ^ object perform: selector withArguments: args ].		((object isBehavior not) and: [ object class respondsTo: selector ]) ifTrue: [			^ object class perform: selector withArguments: args ].		object := object outer ].	super doesNotUnderstand: aMessage.