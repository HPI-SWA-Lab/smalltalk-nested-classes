traitPerform: selector withArguments: argsArray in: receiver	| mixinClass |	mixinClass := receiver class.	[ mixinClass class isNestedGenerated and: [ mixinClass outer class specification ~~ self specification ] ] 		whileTrue: [ mixinClass := mixinClass superclass ].	mixinClass isNestedGenerated ifFalse: [ self error: 'mixin not included in class' ].	^ mixinClass outer traitPerform: selector withArguments: argsArray in: receiver