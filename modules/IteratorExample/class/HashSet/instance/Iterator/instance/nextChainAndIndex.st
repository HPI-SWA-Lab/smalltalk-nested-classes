nextChainAndIndex	| tChain tIndex size |	tChain := chain.	tIndex := index.	size := outer class defaultSize.	tIndex := tIndex + 1.	(tChain == 0 or: [ tIndex > (outer chainAt: tChain) size ])		ifTrue: [ "find next chain" 			 [ tChain := tChain + 1 ]				doWhileTrue: [ (outer chainAt: tChain) size == 0					& (tChain < size) ].			tIndex := 1 ].	tChain >= size		ifTrue: [ ^ nil ]		ifFalse: [ ^ { tChain. tIndex }].