addBoxes	| topLeftX topLeftY |	self flag: #rhi. "Refactor!"	topLeftX := self topLeft x.	topLeftY := self topLeft y.	self sworld fixed rows do: [:row |		row do: [:each | each isSokobanBlock			ifTrue: [self addMorph: (each				position: ((each location x - 1) * each blockSize x + topLeftX)					@ ((each location y - 1) * each blockSize y						+ self class titleHeight + topLeftY))]]].	self sworld movable rows do: [:row |		row do: [:each | each isSokobanBlock			ifTrue: [self addMorph: (each				position: ((each location x - 1) * each blockSize x + topLeftX)					@ ((each location y - 1) * each blockSize y						+ self class titleHeight + topLeftY))]]].	self announceIfFinished.