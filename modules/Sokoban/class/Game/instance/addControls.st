addControls	self flag: #rhi. "Refactor!"	self score: self buildScore.	self addMorph: (Morph new		color: Color darkGray;		borderWidth: 0;		height: self class controlsHeight;		width: self width;		hResizing: #spaceFill;		vResizing: #rigid;		listDirection: #leftToRight;		cellInset: 1;		changeTableLayout;		"addMorph: (Morph new			color: Color black;			height: self controlsHeight;			hResizing: #spaceFill;			vResizing: #rigid);"		addMorph: self score;		addMorph: (self			buildButtonForm: self class rightArrow			action: #moveRight			target: self);		addMorph: (self			buildButtonForm: self class downArrow			action: #moveDown			target: self);		addMorph: (self			buildButtonForm: self class upArrow			action: #moveUp			target: self);		addMorph: (self			buildButtonForm: self class leftArrow			action: #moveLeft			target: self);		addMorph: ((self			buildButtonLabel: '?'			action: #help			target: self			balloonText: 'Help')				color: Color lightBlue);		addMorph: ((self			buildButtonLabel: 'X'			action: #quit			target: self			balloonText: 'Quit')				color: Color lightRed);		position: self topLeft x @ (self bottomLeft y - self class controlsHeight);		yourself).