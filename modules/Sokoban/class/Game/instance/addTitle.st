addTitle	| title |	(title := Morph new)		color: Color darkGray;		borderWidth: 0;		height: self class titleHeight;		width: self width;		hResizing: #spaceFill;		vResizing: #rigid;		listDirection: #leftToRight;		cellInset: 1;		changeTableLayout;		addMorph: self buildTitle;		addMorph: ((self			buildButtonForm: self class menuForm			action: #mazesSelectionMenu			target: self)				color: Color veryDarkGray).	self addMorph: (title position: self topLeft x @ self topLeft y).