moveSimplyBy: aPoint	| current new |	self sworld isFinished ifFalse: [		current := self location.		new := current + aPoint.		(self sworld movableAt: new) isSokobanBlock			ifTrue: [				(self sworld movableAt: new) moveBy: aPoint.				self sworld incrementPushes].		self sworld			movableAt: current put: nil;			movableAt: new put: self;			incrementMoves.		self			location: new;			position: self position + (self blockSize * aPoint)].