fitIntoWorld	| oldSizeX columns worldX oldSizeY rows worldY fitX fitY additionalHeight |	oldSizeX := self blockSize x.	columns := self sworld range x.	worldX := World extent x.	oldSizeY := self blockSize y.	rows := self sworld range y.	worldY := World extent y.	additionalHeight := Game titleHeight + Game controlsHeight.	((oldSizeX * columns) > worldX or: [(oldSizeY * rows + additionalHeight) > worldY])		ifTrue: [				fitX := (worldX / columns) floor.				fitY := (worldY - additionalHeight / rows ) floor.				self blockSize: (fitX min: fitY) asPoint.				self newForm: (self form scaledToSize: self blockSize).				self extent: self blockSize].