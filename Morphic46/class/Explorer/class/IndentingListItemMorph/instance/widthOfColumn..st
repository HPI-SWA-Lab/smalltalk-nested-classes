widthOfColumn: columnIndex 	| widthOrSpec |	container columns ifNil: [ ^ self width ].	widthOrSpec := container columns at: columnIndex.	^ widthOrSpec isNumber		ifTrue: [ widthOrSpec ]		ifFalse:			[ widthOrSpec isBlock				ifTrue:					[ widthOrSpec						cull: container						cull: self ]				ifFalse:					[ widthOrSpec						ifNil: [ self width ]						ifNotNil: [ "Fall back"							50 ] ] ]