proposedCorrectionWouldCauseFocusChange: correction 	^ Preferences mouseOverForKeyboardFocus and:		[ | edge | splitsTopAndBottom			ifTrue:				[ edge := correction positive					ifTrue: [ self bottom + 3 ]					ifFalse: [ self top - 3 ].				ActiveHand position y					inRangeOf: edge					and: edge + correction ]			ifFalse:				[ edge := correction positive					ifTrue: [ self right ]					ifFalse: [ self left ].				ActiveHand position x					inRangeOf: edge					and: edge + correction ] ]