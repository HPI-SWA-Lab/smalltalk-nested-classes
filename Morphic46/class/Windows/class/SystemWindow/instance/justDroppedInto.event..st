justDroppedInto: aMorph event: anEvent	(ToolBuilder openToolsAttachedToMouseCursor and: (self hasProperty: #initialDrop))		ifTrue: [			self removeProperty: #initialDrop.			(self submorphs detect: [:m | m isKindOf: BottomRightGripMorph] ifNone: [])				ifNotNil: [:grip | 					grip referencePoint: anEvent position.					anEvent hand newMouseFocus: grip]].	self hasDropShadow: (self isActive and: [Preferences menuAppearance3d]).	isCollapsed		ifTrue: [self position: ((self position max: 0@0) grid: 8@8).				collapsedFrame := self bounds]		ifFalse: [fullFrame := self bounds.				TopWindow ~~ self ifTrue: [self activate]].	^super justDroppedInto: aMorph event: anEvent