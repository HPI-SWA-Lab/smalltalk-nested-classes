sliderColor: aColor 	"Change the color of the scrollbar to go with aColor."	| buttonColor |	super sliderColor: aColor.	self updateSliderColor: aColor.	buttonColor := self thumbColor.		self menuButton color: aColor.	upButton color: aColor.	downButton color: aColor.		self class updateScrollBarButtonsAspect: {self menuButton. upButton. downButton} color: aColor.		self flag: #performance. "mt: This is slow..."	self updateMenuButtonImage.	self updateUpButtonImage.	self updateDownButtonImage.