initializePagingArea		"Appearance"	pagingArea := RectangleMorph				newBounds: self totalSliderArea				color: (self class roundedScrollBarLook					ifTrue: [Color gray: 0.9]					ifFalse: [Color r: 0.6 g: 0.6 b: 0.8]).	Preferences gradientScrollBars		ifTrue: [pagingArea setBorderWidth: 1 borderColor: (Color lightGray alpha: 0.5)]		ifFalse: [pagingArea borderWidth: 0].	self addMorphBack: pagingArea.				"Interactions"	pagingArea		on: #mouseDown		send: #scrollPageInit:		to: self.	pagingArea		on: #mouseUp		send: #finishedScrolling		to: self.	