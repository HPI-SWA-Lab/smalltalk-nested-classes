initializeUpButton"initialize the receiver's upButton"	upButton := RectangleMorph newBounds: self boundsForUpButton.	upButton color: self thumbColor.	upButton		on: #mouseDown		send: #scrollUpInit		to: self.	upButton		on: #mouseUp		send: #finishedScrolling		to: self.	self updateUpButtonImage.	self class roundedScrollBarLook		ifTrue: [upButton color: Color veryLightGray.			upButton				borderStyle: (BorderStyle complexRaised width: 3)]		ifFalse: [upButton setBorderWidth: 1 borderColor: Color lightGray].		self addMorph: upButton.		upButton visible: self class scrollBarsWithoutArrowButtons not.