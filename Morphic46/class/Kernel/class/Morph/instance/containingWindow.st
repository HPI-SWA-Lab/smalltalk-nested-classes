containingWindow	"Answer a window or window-with-mvc that contains the receiver"	| component |	component := self.	component model isNil ifTrue: [component := self firstOwnerSuchThat: [:m| m model notNil]].	^(component isNil or: [component isWindowForModel: component model])		ifTrue: [component]		ifFalse: [component firstOwnerSuchThat:[:m| m isWindowForModel: component model]]