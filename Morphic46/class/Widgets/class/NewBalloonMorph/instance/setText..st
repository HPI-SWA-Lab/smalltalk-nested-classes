setText: stringOrText	| text |	text := stringOrText asText.	text addAttribute: (TextFontReference toFont: (self balloonOwner ifNil: [BalloonMorph]) balloonFont).		self textMorph wrapFlag: false.	self textMorph newContents: text.	self textMorph fullBounds.		(self maximumWidth > 0 and: [self textMorph width > self maximumWidth])		ifTrue: [			self textMorph				wrapFlag: true;				width: self maximumWidth].			self updateLayout.