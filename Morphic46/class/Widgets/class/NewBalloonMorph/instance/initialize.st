initialize	super initialize.		self		borderWidth: self defaultBorderWidth;		borderColor: self defaultBorderColor;		color: (self defaultColor alpha: 1.0); "no alpha due to drop shadow"		hasDropShadow: true;		shadowOffset: 1@1;		shadowColor: (self color muchDarker muchDarker alpha: 0.333);		orientation: #bottomLeft.			MenuMorph roundedMenuCorners		ifTrue: [self cornerStyle: #rounded].	textMorph := TextMorph new		wrapFlag: false;		lock;		yourself.		self addMorph: textMorph.