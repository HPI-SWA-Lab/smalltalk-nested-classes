buildWindowWith: builder specs: specs	| windowSpec |	windowSpec := builder pluggableWindowSpec new.	windowSpec		model: self;		label:'Choose a Font to import' translated;		extent: self initialExtent;		children: OrderedCollection new.			specs do:[:assoc|		| rect action widgetSpec |		rect := assoc key.		action := assoc value.		widgetSpec := action value.		widgetSpec ifNotNil:[			widgetSpec frame: rect.			windowSpec children add: widgetSpec]].	^windowSpec