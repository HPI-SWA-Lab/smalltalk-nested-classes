setTitleParametersFor: aMenuTitle 	| menuTitleColor menuTitleBorderColor |	self wantsRoundedCorners		ifTrue: [aMenuTitle useRoundedCorners].	menuTitleColor := Preferences menuColorFromWorld				ifTrue: [self color darker]				ifFalse: [MenuMorph menuTitleColor].	menuTitleBorderColor := Preferences menuAppearance3d				ifTrue: [#inset]				ifFalse: [Preferences menuColorFromWorld						ifTrue: [self color darker muchDarker]						ifFalse: [MenuMorph menuTitleBorderColor]].	aMenuTitle		setColor: menuTitleColor		borderWidth: MenuMorph menuTitleBorderWidth		borderColor: menuTitleBorderColor;		vResizing: #shrinkWrap;		wrapCentering: #center;		cellPositioning: #topCenter;		layoutInset: 0.