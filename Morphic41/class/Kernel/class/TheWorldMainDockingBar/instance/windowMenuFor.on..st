windowMenuFor: window on: menu	menu 		addItem: [ :item |			item				contents: 'Close';				target: window;				selector: #delete ];		addItem: [ :item |			item				contents: 'Close all like this';				target: self;				selector: #closeAllWindowsLike:;				arguments: { window } ];		addItem: [ :item |			item				contents: 'Close all but this';				target: self;				selector: #closeAllWindowsBut:;				arguments: { window } ];		addItem: [ :item |			item 				contents: 'Toggle Full Screen';				target: window;				selector: #expandBoxHit ]