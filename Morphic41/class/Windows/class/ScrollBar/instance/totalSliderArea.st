totalSliderArea	| upperBoundsButton |	upperBoundsButton := menuButton ifNil: [upButton].	bounds isWide		ifTrue: [			upButton right > upperBoundsButton right				ifTrue: [upperBoundsButton := upButton].			^upperBoundsButton bounds topRight - (1@0) corner: downButton bounds bottomLeft + (1@0)]		ifFalse:[			upButton bottom > upperBoundsButton bottom				ifTrue: [upperBoundsButton := upButton].			^upperBoundsButton bounds bottomLeft - (0@1) corner: downButton bounds topRight + (0@1)].