updateSliderColor: aColor	| gradient |	gradient := GradientFillStyle ramp: {			0 -> (Color gray: 0.95).			0.49 -> (Color gray: 0.9).			0.5 -> (Color gray: 0.87).			1 -> (Color gray: 0.93).	}.	gradient origin: slider topLeft.	gradient direction: (self bounds isWide		ifTrue:[0@slider height]		ifFalse:[slider width@0]).	slider fillStyle: gradient.	slider borderStyle: (BorderStyle width: 1 color: Color lightGray).	gradient := GradientFillStyle ramp: {		0 -> (Color gray: 0.65).		0.6 -> (Color gray: 0.82).		1 -> (Color gray: 0.88).	}.	gradient origin: self topLeft.	gradient direction: (self bounds isWide		ifTrue:[0@self height]		ifFalse:[self width@0]).	self borderWidth: 0.	pagingArea fillStyle: gradient.