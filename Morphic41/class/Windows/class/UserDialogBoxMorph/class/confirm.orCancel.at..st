confirm: aString orCancel: cancelBlock at: aPointOrNil		^(self new		title: 'Please confirm:';		label: aString;		addSelectedButton: '       Yes       ' translated value: true;		addButton: '        No        ' translated  value: false;		addCancelButton: '     Cancel     ' translated  value: nil;		runModalIn: ActiveWorld forHand: ActiveHand at: aPointOrNil)			ifNil: [ cancelBlock value ]