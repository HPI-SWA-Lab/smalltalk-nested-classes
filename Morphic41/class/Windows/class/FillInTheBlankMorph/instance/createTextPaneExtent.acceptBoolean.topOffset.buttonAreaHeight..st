createTextPaneExtent: answerExtent acceptBoolean: acceptBoolean topOffset: topOffset buttonAreaHeight: buttonAreaHeight 	"create the textPane"	| result frame |	result := PluggableTextMorph				on: self				text: #response				accept: #response:				readSelection: #selectionInterval				menu: #codePaneMenu:shifted:.	result 		extent: answerExtent;		alwaysShowScrollBars: false;		hResizing: #spaceFill;		vResizing: #spaceFill;		borderWidth: 1;		hasUnacceptedEdits: true;		acceptOnCR: acceptBoolean;		setNameTo: 'textPane'.	frame := LayoutFrame new				leftFraction: 0.0;		 		rightFraction: 1.0;		 		topFraction: 0.0;		 		topOffset: topOffset;		 		bottomFraction: 1.0;		 		bottomOffset: buttonAreaHeight negated;				yourself.	result layoutFrame: frame.	self addMorph: result.	^ result