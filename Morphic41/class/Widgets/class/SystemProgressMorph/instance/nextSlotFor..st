nextSlotFor: shortDescription		lock critical: [ | label bar slots |		slots := labels size.		activeSlots = slots ifTrue: [^0].		activeSlots := activeSlots + 1.		1 to: slots do: [:index |			label := (labels at: index).			label ifNil: [				bar := bars at: index put: (SystemProgressBarMorph new extent: BarWidth@BarHeight).				label := labels at: index put: (StringMorph contents: shortDescription font: font).				self					addMorphBack: label;					addMorphBack: bar.				^index].			label owner ifNil: [				bar := bars at: index.				label := labels at: index.				self					addMorphBack: (label contents: shortDescription);					addMorphBack: (bar barSize: 0).				^index]]]		