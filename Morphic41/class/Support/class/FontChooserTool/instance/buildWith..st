buildWith: builder	"Create the ui for the browser"	"ToolBuilder open: self"	| windowSpec |	self offerStyleList ifTrue:[		windowSpec := self buildWindowWith: builder specs: {			(0@0 corner: 0.4@0.4) -> [self buildFontListWith: builder].			(0.4@0 corner: 0.8@0.4) -> [self buildStyleListWith: builder].			(0.8@0 corner: 1.0@0.4) -> [self buildPointSizeListWith: builder].			(0.0@0.4 corner: 1.0@0.88) -> [self buildPreviewPaneWith: builder].			(0.0@0.88 corner: 1@1) -> [self buildButtonBarWith: builder].		}.	] ifFalse:[		windowSpec := self buildWindowWith: builder specs: {			(0@0 corner: 0.7@0.4) -> [self buildFontListWith: builder]."			(0.4@0 corner: 0.8@0.4) -> [self buildStyleListWith: builder]."			(0.7@0 corner: 1.0@0.4) -> [self buildPointSizeListWith: builder].			(0.0@0.4 corner: 1.0@0.8) -> [self buildPreviewPaneWith: builder].			(0.0@0.8 corner: 1@1) -> [self buildButtonBarWith: builder].		}.	].	windowSpec extent: self initialExtent.	window := builder build: windowSpec.	"Yes, that's a hack. But it looks ugly with line breaks."	(builder widgetAt: #preview) textMorph wrapFlag: false.	^window